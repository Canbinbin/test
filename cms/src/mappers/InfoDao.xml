<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mcpfp.web.modules.dao.InfoDao">

	<!-- 通用查询结果列-->
	<sql id="Base_Column_List">
		 id, title,score
	</sql>
	
	
	<resultMap type="com.mcpfp.web.modules.entity.Info" id="InfoResult">
		<id column="id" property="id"/>
		<result column="id" property="id"/>
		<result column="title" property="name"/>
		<result column="score" property="num"/>
	</resultMap>

	<select id="findAllInfo" resultMap="InfoResult">
		select `id`,`title`,`score` from bookinfo where 1 = 1 		
	</select>
	
	

</mapper>